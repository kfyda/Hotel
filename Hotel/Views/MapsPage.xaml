<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps" 
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hotel.Views.MapsPage"
             Title="{Binding Title}">

    <ContentPage.Content>
        <StackLayout>
            <maps:Map x:Name="map"
                      IsShowingUser="True"
                      MoveToLastRegionOnLayoutChange="False"
                      MapClicked="Map_MapClicked">
                <maps:Map.Pins>
                    <!-- Punkty zostaną dodane dynamicznie z kodu-behind -->
                </maps:Map.Pins>
            </maps:Map>
            <Button Text="Halo"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
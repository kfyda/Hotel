<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hotel.Views.PriceListPage"
             Title="{Binding Title}"
             BackgroundColor="#192637">
    <!-- Dodane tło -->

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="BackgroundColor">#192637</Color>
            <Color x:Key="Accent">#96d1ff</Color>
            <Color x:Key="Primary">#0078d4</Color>
            <Color x:Key="TextColor">White</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ListView x:Name="MyListView"
          ItemsSource="{Binding Items}"
          ItemTapped="Handle_ItemTapped"
          CachingStrategy="RecycleElement"
          BackgroundColor="{StaticResource BackgroundColor}"
          SeparatorVisibility="None">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Padding="20,10" VerticalOptions="FillAndExpand">
                        <Label Text="{Binding .}" TextColor="{StaticResource TextColor}"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>



    <!--Custom View Cells-->
</ContentPage>
